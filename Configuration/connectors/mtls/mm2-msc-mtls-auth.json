{
  "name": "mm2-msc",
  "connector.class": "org.apache.kafka.connect.mirror.MirrorSourceConnector",
  "replication.policy.class":"com.amazonaws.kafka.samples.CustomMM2ReplicationPolicy",
  "clusters": "msksource,mskdest",
  "source.cluster.alias": "msksource",
  "target.cluster.alias": "mskdest",
  "target.cluster.bootstrap.servers": "{TARGET CLUSTER BROKERS ADDRESS}",
  "producer.override.bootstrap.servers": "{TARGET CLUSTER BROKERS ADDRESS}",
  "source.cluster.bootstrap.servers": "{SOURCE CLUSTER BROKERS ADDRESS}",
  "topics": "^ExampleTopic[\\w]*",
  "tasks.max": "4",
  "key.converter": " org.apache.kafka.connect.converters.ByteArrayConverter",
  "value.converter": "org.apache.kafka.connect.converters.ByteArrayConverter",
  "replication.factor": "3",
  "offset-syncs.topic.replication.factor": "3",
  "sync.topic.acls.interval.seconds": "600",
  "sync.topic.configs.interval.seconds": "600",
  "refresh.topics.interval.seconds": "300",
  "refresh.groups.interval.seconds": "20",
  "producer.enable.idempotence":"true",
  "source.cluster.security.protocol": "SSL",
  "source.cluster.ssl.truststore.location": "/tmp/kafka.client.truststore.jks",
  "source.cluster.ssl.truststore.password": "changeit",
  "source.cluster.ssl.keystore.location": "/tmp/kafka.client.keystore.jks",
  "source.cluster.ssl.keystore.password": "password",
  "source.cluster.ssl.key.password": "password",
  "target.cluster.security.protocol": "SSL",
  "target.cluster.ssl.truststore.location": "/tmp/kafka.client.truststore.jks",
  "target.cluster.ssl.truststore.password": "changeit",
  "target.cluster.ssl.keystore.location": "/tmp/kafka.client.keystore.jks",
  "target.cluster.ssl.keystore.password": "password",
  "target.cluster.ssl.key.password": "password",
  "consumer.group.id": "mm2-msc"
}